    <!--edit text for note title-->

    <!--edit text for note description-->


    <!--button for saving and updating a note-->

    <EditText
        android:id="@+id/idEdtNoteName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"

        android:layout_marginEnd="10dp"
        android:background="@color/gray"
        android:hint="@string/enter_note_title"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/idEdtNoteDesc"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:autofillHints=""
        android:background="@color/gray"
        android:gravity="start|top"
        android:hint="@string/enter_your_note_details"
        android:inputType="textMultiLine"
        android:padding="7dp"
        android:singleLine="false"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/idBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/gray"/>

    <Button
        android:id="@+id/idCancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/gray"/>

</LinearLayout>

