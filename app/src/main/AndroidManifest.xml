<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="Notes"
        android:name=".NoteRoomApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyNotesApp"
        tools:targetApi="31">
        <activity
            android:name=".presentation.activities.timer.TimerActivity"
            android:exported="false"
            android:parentActivityName=".presentation.activities.main.MainActivity" />
        <activity
            android:name=".presentation.activities.add_edit.AddEditNoteActivity"
            android:exported="false"
            android:parentActivityName=".presentation.activities.main.MainActivity" />
        <activity
            android:name=".presentation.activities.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>